{
  "name": "cloud-backup-system",
  "version": "1.0.0",
  "description": "This project serves as a cloud backup system",
  "main": "app.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nodemon start",
    "start:dev": "nodemon src/app.ts",
    "start:debug": " start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "tsc": "tsc",
    "schema.format": "prisma format --schema=./src/prisma/schema.prisma",
    "schema.generate": "prisma generate --schema=./src/prisma/schema.prisma",
    "db.migration.run": "npx prisma migrate deploy --schema=./src/prisma/schema.prisma",
    "db.migration.create": "npx prisma migrate dev --create-only --schema=./src/prisma/schema.prisma",
    "migration:run": "prisma migrate deploy",
    "migration:run-dev": "prisma migrate dev ",
    "migration:reset": "prisma migrate reset"
  },
  "author": "Allison Onyeije",
  "license": "ISC",
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "express": "^4.18.2",
    "prettier-eslint": "^15.0.1",
    "prisma": "^5.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jest": "^29.6.3",
    "jsonwebtoken": "^9.0.1",
    "nodemon": "^3.0.1",
    "redis": "^4.6.8",
    "ts-jest": "^29.1.1"
  }
}
